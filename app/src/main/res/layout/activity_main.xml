<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Welcome in SegAI!"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dataCollectingButton"
        android:layout_width="201dp"
        android:layout_height="66dp"
        android:onClick="switchToDataCollecting"
        android:text="data collecting mode"
        android:backgroundTint="@color/blue_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.341" />

    <Button
        android:id="@+id/uploadPhotoCamera"
        android:layout_width="201dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:onClick="uploadPhoto"
        android:text="upload photo from camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataCollectingButton"
        app:layout_constraintVertical_bias="0.234" />

    <Button
        android:id="@+id/uploadPhotoDisc"
        android:layout_width="201dp"
        android:layout_height="66dp"
        android:onClick="uploadPhotoFromDisc"
        android:text="upload photo from disc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadPhotoCamera"
        app:layout_constraintVertical_bias="0.208" />


</androidx.constraintlayout.widget.ConstraintLayout>